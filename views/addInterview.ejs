<form action="/interview/create" method="POST">
    <div class="form-group">
      <label for="companyName">Company Name</label>
      <input type="text" class="form-control" name="company" id="companyName" placeholder="Company Name" required>
    </div>
    <div class="form-group">
      <label for="interviewDate">Date</label>
      <input type="date" class="form-control" name="date" id="interviewDate" placeholder="Date" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Interview</button>
  </form>
  