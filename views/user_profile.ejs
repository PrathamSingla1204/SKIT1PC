<% if (user.id == profile_user.id) { %>
  <form action="/users/updateProfile/<%=profile_user.id%>" method="POST" class="m-3">
    <div class="form-group">
      <input type="text" class="form-control" name="name" placeholder="Your Name" value="<%=profile_user.name%>" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="Enter Password" value="<%=profile_user.password%>" required>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="phoneNo" placeholder="Phone Number" value="<%=profile_user.phoneNo%>" required>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
<% } else { %>
  <p><%=profile_user.name%></p>
  <p><%=profile_user.email%></p>
<% } %>
